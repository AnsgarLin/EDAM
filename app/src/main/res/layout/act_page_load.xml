<?xml version="1.0" encoding="utf-8"?>
<com.edam.page.list.ActInfoLoadView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ProgressBar
        android:id="@+id/load_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/load_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/load_progress"
        android:layout_centerHorizontal="true"
        android:text="@string/page_load"
        android:textColor="@color/light_black"
        android:textSize="18sp" />

</com.edam.page.list.ActInfoLoadView>