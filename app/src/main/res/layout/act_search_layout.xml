<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Space
        android:id="@+id/title_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.edam.floatsearch.FloatSearchEdit
        android:id="@+id/keyword_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </com.edam.floatsearch.FloatSearchEdit>

    <Space
        android:id="@+id/keyword_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.edam.floatsearch.FloatSearchList
        android:id="@+id/city_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.edam.floatsearch.FloatSearchList>

    <Space
        android:id="@+id/city_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/start_time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <Space
        android:id="@+id/time_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/end_time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/submit_button_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>

</LinearLayout>